# Turn off all the annoying crap
startup_message off
vbell off

term st-256color
# Remap '\' as the prefix key
escape ^\\

hardstatus alwayslastline
hardstatus string '%{= kG}[ %{G}%H %{g}][%= %{= kw}%?%-Lw%?%{r}(%{W}%n*%f%t%?(%u)%?%{r})%{w}%?%+Lw%?%? %= %{g}][%{B} %m/%d %{W}%c %{g}]'

defscrollback 50000
